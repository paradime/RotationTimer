<?xml version="1.0" encoding="utf-8"?>
 
<!-- layout/up_down_button.xml -->
 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center_horizontal" android:orientation="vertical"
	android:layout_marginLeft="1dip" android:layout_marginRight="1dip"
	android:background="#e8e8e8">
 
	<TextView android:text="8" android:layout_width="wrap_content"
		android:id="@+id/up_down_button_value" android:textSize="20pt"
		android:singleLine="true" android:paddingTop="0dip"
		android:paddingBottom="0dip" android:layout_height="wrap_content"
		android:textColor="#000000" android:layout_alignLeft="@+id/up_down_button_up"
		android:layout_alignRight="@+id/up_down_button_up"
		android:layout_centerInParent="true" android:gravity="center_vertical|center_horizontal" />
 
	<ImageButton
	    android:id="@+id/up_down_button_up"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/up_down_button_value"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/up_button" />
 
	<View android:layout_width="wrap_content" android:layout_height="1dip"
		android:id="@+id/up_down_button_spacer" android:layout_alignLeft="@+id/up_down_button_up"
		android:layout_centerInParent="true" android:layout_alignRight="@+id/up_down_button_up"
		android:layout_below="@+id/up_down_button_up" android:background="#555555" />
 
	<ImageButton
	    android:id="@+id/up_down_button_down"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/up_down_button_spacer"
	    android:background="@drawable/down_button" />
 
</RelativeLayout>